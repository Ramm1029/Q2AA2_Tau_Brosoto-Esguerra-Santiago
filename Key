package cs4_aa_tau_brosotoesguerrasantiago;

public class Key implements Descriptive {
    private String name, description;
    private Room room;
    
    public Key(Room room) {
        this.room = room;
        description = "This key looks like it could be used for the " + room + " lock.";
    }
    
    public void use(Room room) {
        if (this.room.getName().equals(room.getName())) {
            room.unlockRoom();
        } else {
            System.out.println(name + " cannot be  used on " + room.getName() + ".");
        }
    }
    @Override
    public void showDescription() {
        System.out.println(description);
    }
    // getters
    public String getName() {
        return name;
    }
    public String getDescription() {
        return description;
    }
    public String getRoom() {
        return room.getName();
    }
}
