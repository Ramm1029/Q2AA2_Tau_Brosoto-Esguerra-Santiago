package game;

/**
 * 
 */
public class Item implemen{
    private String name, description;
    private int durability, damage, range;
    private boolean pickedUp;

    public Item(String n, String d, int du, int da, int r) {
        this.name = n;
        this.description = d;
        this.durability = du;
        this.damage = da;
        this.range = r;
        this.pickedUp = false; 
    }

    public void use(Character character, Killer killer) {
        if (durability > 0) {
            if (calculateDistance(character, killer) <= range) {
                killer.takeDamage(damage);
                decreaseDurability();
                System.out.println(name + " was used to attack " + killer.getName() + " for " + damage + " damage.");
            } else {
                System.out.println(name + " is out of range for the attack.");
            }
        } else {
            System.out.println(name + " is broken and cannot be used.");
        }
    }
    public void decreaseDurability() {
        durability--;
        if (durability <= 0) {
            durability = 0; 
            System.out.println(name + " has broken.");
        }
    }

    public boolean isBroken() {
        return durability <= 0;
    }
    @Override 
    public void showDescription() { 
    System.out.println("Item: " + name + "\nDescription: " + description); 
    }
}
